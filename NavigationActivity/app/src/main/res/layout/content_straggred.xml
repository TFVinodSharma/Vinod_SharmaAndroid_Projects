<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_radio_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">


    <TextView
        android:id="@+id/staggeredtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="@dimen/dimens_18dp"
        android:text="@string/chooseanswer"
        android:textColor="@color/faqcolor"
        android:textSize="@dimen/dimen_14dp" />

    <TextView
        android:id="@+id/staggeredQuestiontitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staggeredtitle"
        android:layout_marginTop="20dp"

        android:letterSpacing="0.03"
        android:padding="@dimen/dimens_18dp"
        android:text="adsdvgfdhfghnfgnbgf"
        android:textColor="@color/TopHeadingColor"
        android:textSize="@dimen/dimens_18dp" />

    <LinearLayout
        android:id="@+id/radiolayout1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/staggeredQuestion"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutstraggered1"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circular_border_new"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="5dp"

                android:padding="5dp"
                android:text="A"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14dp" />

            <TextView
                android:id="@+id/straggeredoption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="A Pilot"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutstraggered2"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/circular_border_new"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:padding="5dp"
                android:text="B"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14dp" />

            <TextView
                android:id="@+id/straggeredoption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="A Pilot"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/radiolayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_below="@+id/radiolayout1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutstraggered3"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/circular_border_new"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:padding="5dp"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14dp" />

            <TextView
                android:id="@+id/straggeredoption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_border_new"

                android:gravity="center"
                android:text="An Astronaut"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutstraggered4"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/circular_border_new"
            android:elevation="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"

                android:padding="5dp"
                android:text="D"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14dp" />

            <TextView
                android:id="@+id/straggeredoption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="An Scientist"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
